# Database
DATABASE_URL="mysql://root:password@localhost:3306/fastify_db"

# Server
PORT=3000
NODE_ENV=development
JWT_SECRET="secret"

# CORS
ALLOW_CORS_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'

# MAILER
MAILER_HOST="smtp.gmail.com"
RESEND_API_KEY="re_aTuG2XoQ_M6B6uMc2L43suTh5ZqdKBTau"
MAILER_PROVIDER="resend"

# Configuration du stockage
STORAGE_TYPE=local # ou 's3' pour utiliser AWS S3
UPLOAD_DIR=uploads # Dossier pour le stockage local

# Configuration AWS S3 (nécessaire uniquement si STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=votre_access_key_id
AWS_SECRET_ACCESS_KEY=votre_secret_access_key
AWS_REGION=votre_region
AWS_S3_BUCKET=votre_bucket

# MINIO
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
